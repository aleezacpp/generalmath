#include <stdio.h>
#include <string.h>
int main(){
   /*area and radii of a circle using diameter*/
    printf("Enter the diameter of circle : \n");
    int diameter;
    scanf("%d", &diameter);
    int radii= diameter/2;
    printf("R=%d \n", radii);
    double area = 3.142*radii*radii;
    printf("Area : %.2f \n", area);
    return 0;
}
